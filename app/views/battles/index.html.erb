<% @battles.each do |battle| %>
  <br>
  <p><b>Battle #<%= battle.id %></b></p>
  <small><%= battle.teams.first.name %></small> | <small><%= battle.teams&.second&.name %></small>

  <% if battle.teams.count < 2 %>
    <%= form_with(url: join_battles_path, method: "get", local: true) do %>
      <%= collection_select(:team_id, :team_id, Team.all, :id, :name) %>
      <%= hidden_field_tag 'battle_id', battle.id %>
      <%= submit_tag "Join", class: 'btn btn-primary btn-sm' %>
    <% end %>
  <% end %>


  <hr>
<% end %>
